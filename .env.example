# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886

# Twilio Content Templates (for interactive buttons - optional)
# Create these in Twilio Console > Messaging > Content Template Builder
TWILIO_CONTENT_SID_WELCOME=
TWILIO_CONTENT_SID_WEATHER=
TWILIO_CONTENT_SID_LOCATION=

# Weather API Configuration (OpenWeatherMap)
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
WEATHER_FORECAST_URL=https://api.openweathermap.org/data/2.5/forecast

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT=10.0

# Open-Meteo Configuration (FREE - no API key needed)
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
OPEN_METEO_FORECAST_DAYS=16

# Memory Configuration
MEMORY_TTL_SECONDS=3600

# Redis Configuration (for production)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Geocoding Configuration (OpenStreetMap Nominatim - free, no API key)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=weather-chatbot/1.0
GEOCODING_CACHE_TTL=86400
GEOCODING_CONFIDENCE_THRESHOLD=0.7
DEFAULT_COUNTRY_BIAS=Ghana

# Typing Delay Settings (for natural conversational UX)
TYPING_DELAY_ENABLED=true
TYPING_DELAY_MIN=0.5
TYPING_DELAY_MAX=2.0

# Localization Settings
DEFAULT_LANGUAGE=en
